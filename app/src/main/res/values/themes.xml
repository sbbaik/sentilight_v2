<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Sentilight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ic_launcher_background_color</item>
        <item name="colorPrimaryVariant">@color/ic_launcher_background_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#FFBB86FC</item>
        <item name="colorSecondaryVariant">#FF6200EE</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:buttonStyle">@style/Widget.App.Button.Transparent</item>
        <item name="editTextStyle">@style/Widget.App.EditText.Transparent</item>
    </style>

    <style name="Widget.App.Button.Transparent" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/transparent_button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">#50FFFFFF</item>
    </style>

    <style name="Widget.App.EditText.Transparent" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/transparent_edittext_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#CCCCCC</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

</resources>